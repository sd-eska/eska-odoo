<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Todo Task Tree View (Liste görünümü) -->
    <record id="view_todo_task_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree string="Todo Tasks" decoration-success="is_done==True" decoration-danger="priority=='3'">
                <field name="priority" widget="priority"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="due_date"/>
                <field name="is_done"/>
            </tree>
        </field>
    </record>

    <!-- Todo Task Form View (Detay görünümü) -->
    <record id="view_todo_task_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="Todo Task">
                <header>
                    <button name="action_mark_done" type="object" string="Mark as Done"
                            class="oe_highlight" invisible="is_done"/>
                    <button name="action_mark_undone" type="object" string="Mark as Undone"
                            invisible="not is_done"/>
                    <field name="is_done" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Task adını girin..."/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Detaylı açıklama yazın..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Todo Task Kanban View (Kanban tahtası) -->
    <record id="view_todo_task_kanban" model="ir.ui.view">
        <field name="name">todo.task.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="is_done" class="o_kanban_small_column">
                <field name="name"/>
                <field name="description"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="due_date"/>
                <field name="is_done"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a t-if="!record.is_done.raw_value" role="menuitem" type="object" name="action_mark_done" class="dropdown-item">Mark as Done</a>
                                    <a t-if="record.is_done.raw_value" role="menuitem" type="object" name="action_mark_undone" class="dropdown-item">Mark as Undone</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_priority">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="description" widget="text"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="due_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action - Menüden açılacak pencere -->
    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">Todo Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk Todo görevinizi oluşturun!
            </p>
            <p>
                '+' butonuna tıklayarak yeni bir görev ekleyebilirsiniz.
            </p>
        </field>
    </record>

    <!-- Menu Item - Ana menü -->
    <menuitem id="menu_todo_root" name="Todo App" sequence="10"/>
    <menuitem id="menu_todo_tasks" name="Tasks" parent="menu_todo_root"
              action="action_todo_task" sequence="10"/>
</odoo>
