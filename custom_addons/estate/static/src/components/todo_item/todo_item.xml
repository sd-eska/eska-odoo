<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="estate.TodoItem">
        <div class="o_todo_item p-2 mb-2 border rounded bg-white shadow-sm d-flex justify-content-between align-items-center">
            <div t-att-class="props.todo.isCompleted ? 'text-decoration-line-through text-muted' : ''">
                <span class="badge bg-secondary me-2"><t t-esc="props.todo.id"/></span>
                <t t-esc="props.todo.description"/>
            </div>
        </div>
    </t>
</templates>
