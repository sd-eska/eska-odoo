<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_estate_root" 
              name="Emlak" 
              sequence="5"/>
    
    <!-- Dashboard Client Action -->
    <record id="action_estate_dashboard" model="ir.actions.client">
        <field name="name">Gösterge Paneli</field>
        <field name="tag">estate_dashboard_action</field>
    </record>

    <!-- Summary Client Action -->
    <record id="action_estate_summary" model="ir.actions.client">
        <field name="name">Emlak Özet</field>
        <field name="tag">estate_summary_action</field>
    </record>

    <!-- Dashboard Menu -->
    <menuitem id="menu_estate_dashboard" 
              name="Dashboard" 
              parent="menu_estate_root" 
              action="action_estate_dashboard" 
              sequence="1"/>

    <!-- Summary Menu -->
    <menuitem id="menu_estate_summary" 
              name="Özet" 
              parent="menu_estate_root" 
              action="action_estate_summary" 
              sequence="2"/>

    <!-- Properties Menu -->
    <menuitem id="menu_estate_property" 
              name="Mülkler" 
              parent="menu_estate_root" 
              action="action_estate_property" 
              sequence="10"/>

    <!-- Settings Menu -->
    <menuitem id="menu_estate_settings"
              name="Settings"
              parent="menu_estate_root"
              sequence="20"
              groups="estate_group_manager"/>

    <menuitem id="menu_estate_property_type"
              name="Property Types"
              parent="menu_estate_settings"
              action="estate_property_type_action"
              sequence="10"/>

    <menuitem id="menu_estate_property_tag"
              name="Property Tags"
              parent="menu_estate_settings"
              action="estate_property_tag_action"
              sequence="20"/>

    <menuitem id="menu_estate_users"
              name="Satış Danışmanları"
              parent="menu_estate_settings"
              action="base.action_res_users"
              sequence="30"/>
</odoo>
