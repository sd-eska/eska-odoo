<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_property_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div class="row mt32 mb32">
                            <div class="col-auto mw-100 mb-2">
                                <strong>Salesman:</strong>
                                <p class="m-0" t-field="property.salesperson_id"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Expected Price:</strong>
                                <p class="m-0" t-field="property.expected_price"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Status:</strong>
                                <p class="m-0" t-field="property.state"/>
                            </div>
                        </div>

                        <t t-if="property.offer_ids">
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Partner</th>
                                        <th>Validity (days)</th>
                                        <th>Deadline</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="property.offer_ids" t-as="offer">
                                        <tr>
                                            <td>
                                                <span t-field="offer.price"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.partner_id"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.validity"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.date_deadline"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.status"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <div class="alert alert-info">
                                <strong>No offers have been made yet for this property.</strong>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
