<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kategori: Real Estate/Brokerage -->
    <record id="module_category_real_estate_brokerage" model="ir.module.category">
        <field name="name">Real Estate/Brokerage</field>
        <field name="description">Emlak ve Broker Yönetimi</field>
        <field name="sequence">10</field>
    </record>

    <!-- Grup 1: Agent (Kullanıcı) -->
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_real_estate_brokerage"/>
        <field name="comment">Emlak acenteleri için temel yetkiler</field>
    </record>

    <!-- Grup 2: Manager (Yönetici) -->
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_real_estate_brokerage"/>
        <field name="comment">Emlak yöneticileri için tam yetkiler</field>
        <!-- Manager grubu, Agent grubunu da içerir (implied_ids) -->
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>

    <!-- Kayıt Kuralı: Agent (Kullanıcı) sadece kendi mülklerini veya temsilcisi olmayanları görür -->
    <record id="estate_property_rule_agent" model="ir.rule">
        <field name="name">Real Estate Agent: Own Properties Only</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">['|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
    </record>

    <!-- Kayıt Kuralı: Manager her şeyi görür -->
    <!-- Not: Manager, Agent grubunu imply ettiği için, bu kural Agent kuralıyla OR olarak birleşir. -->
    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Real Estate Manager: All Properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
    </record>

    <!-- Çoklu Şirket Kuralı -->
    <record id="estate_property_company_rule" model="ir.rule">
        <field name="name">Estate Property: Multi-company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
