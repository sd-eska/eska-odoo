<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_uts" model="ir.ui.view">
        <field name="name">product.template.form.inherit.uts</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="inside">
                <group string="ÜTS İzlenebilirlik">
                    <field name="is_uts_tracked"/>
                    <field name="uts_tracking_type" invisible="not is_uts_tracked" required="is_uts_tracked"/>
                    <field name="uts_udi" invisible="not is_uts_tracked"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
